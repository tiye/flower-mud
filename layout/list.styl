
body
  margin 0
  background hsl(120,10,98)

*
  box-sizing border-box

#wrapper
  width 600px
  margin 40px 100px

#input
  width 100%
  font-size 30px
  padding 5px 10px
  outline none
  border none
  box-shadow 0px 1px 4px hsl(240,20,40)
  background transparent

#list
  font-size 30px
  line-height 40px

  .entry
    color black
    padding 0px 10px
    height 50px
    font-family 'Lucida Grande', Monaco, Ubuntu, monospace
    -webkit-transition-duration 0.2s
    -webkit-transition-timing-function ease-out
    position relative
    border-left 0px black solid

    .inside
      position absolute
      left 0px
      line-height 50px
      padding-left 0px
      // -webkit-transition-delay 0.2s
      -webkit-transition-duration 0.3s
      -webkit-transition-timing-function ease-in

    &.active
      border-left 40px black solid

      .inside
        padding-left 30px